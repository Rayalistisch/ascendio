NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
OPENAI_API_KEY=
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=
APP_CRED_ENC_KEY=
CRON_SECRET=
NEXT_PUBLIC_APP_URL=http://localhost:3000
DEV_BILLING_BYPASS=false
NEXT_PUBLIC_DEV_BILLING_BYPASS=false

# Google OAuth (Search Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Optional: defaults to ${NEXT_PUBLIC_APP_URL}/api/search-console/callback
GOOGLE_SEARCH_CONSOLE_REDIRECT_URI=
# Optional: falls back to APP_CRED_ENC_KEY
GOOGLE_OAUTH_STATE_SECRET=

# Stripe billing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_BUSINESS=
STRIPE_PRICE_STARTER_YEARLY=
STRIPE_PRICE_PRO_YEARLY=
STRIPE_PRICE_BUSINESS_YEARLY=

# Admin
ADMIN_SECRET=

# External plagiarism check (scanner)
# Set to false to disable external web checks
PLAGIARISM_EXTERNAL_CHECK=true
# Optional: auto | serper | duckduckgo (default: auto)
PLAGIARISM_EXTERNAL_PROVIDER=auto
# Optional: when set, scanner uses Serper API; otherwise DuckDuckGo fallback
SERPER_API_KEY=

# Content uniqueness guard (generate-and-publish worker)
# Blocks publish when duplicate risk is above thresholds.
CONTENT_DUPLICATE_GUARD=true
CONTENT_DUPLICATE_EXTERNAL_CHECK=true
# off | auto | aggressive
CONTENT_HUMANIZER_MODE=auto
# Humanizer starts when either internal or external score reaches this value.
CONTENT_DUPLICATE_HUMANIZER_TRIGGER_SCORE=55
# Publish is blocked when scores stay above these values after humanizer passes.
CONTENT_DUPLICATE_INTERNAL_BLOCK_SCORE=70
CONTENT_DUPLICATE_EXTERNAL_BLOCK_SCORE=72
CONTENT_HUMANIZER_MAX_ATTEMPTS=2
